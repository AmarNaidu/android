<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ff0a3e80">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/backImage"
        android:background="@drawable/upoharbd_pohela_boishakh"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/banglaImage"
        android:background="@drawable/upoharbd_pohela_boishakh"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/mozart_name"
        android:id="@+id/textView2"
        android:layout_below="@+id/backImage"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/bozar_name"
        android:id="@+id/textView3"
        android:layout_below="@+id/banglaImage"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
